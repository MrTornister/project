{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "composite": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "outDir": "./dist/node",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.ts",
    "server/**/*",
    "src/scripts/**/*",
    "src/config/**/*",
    "src/types/**/*",
    "src/services/**/*",
    "src/utils/**/*"  // Add this line
  ]
}
